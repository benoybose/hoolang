{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake (MSVC x64 Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild",
                "-GNMake Makefiles"
            ]
        },
        {
            "label": "Make All (MSVC)",
            "type": "shell",
            "command": "nmake",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        },
        {
            "label": "Make Clean (MSVC)",
            "type": "shell",
            "command": "nmake",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            }
        }
    ]
}