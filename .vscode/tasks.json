{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "Hoo: Get Packages (x64)",
            "type": "shell",
            "command": "python3",
            "args": ["getpackages.py", "--arch", "x64"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Hoo: Get Packages (x86)",
            "type": "shell",
            "command": "python3",
            "args": ["getpackages.py", "--arch", "x86"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Hoo: Configure (Release)",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "args": [
                    "-G",
                    "NMake Makefiles",
                    "-B",
                    "./Build/Release",
                    "-DCMAKE_BUILD_TYPE=Release"
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Hoo: Build (Release)",
            "type": "shell",
            "windows": {
                "command": "nmake"
            },
            "options": {
                "cwd": "${workspaceFolder}/Build/Release"
            },
            "problemMatcher": "$vsls",
            "dependsOn": ["Hoo: Configure (Release)"]
        },
        {
            "label": "Hoo: Configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "args": [
                    "-G",
                    "NMake Makefiles",
                    "-B",
                    "./Build/Debug",
                    "-DCMAKE_BUILD_TYPE=Debug"
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Hoo: Build (Debug)",
            "type": "shell",
            "windows": {
                "command": "nmake"
            },
            "options": {
                "cwd": "${workspaceFolder}/Build/Debug"
            },
            "problemMatcher": "$vsls",
            "dependsOn": ["Hoo: Configure (Debug)"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Hoo: Clean",
            "type": "shell",
            "windows": {
                "command": "rmdir",
                "args": ["/S/Q", "${workspaceFolder}\\Build"]
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Hoo: Test (Debug)",
            "type": "shell",
            "windows": {
                "command": "nmake",
                "args": [ "test" ]
            },
            "options": {
                "cwd": "${workspaceFolder}/Build/Debug"
            },
            "problemMatcher": [],
            "dependsOn": ["Hoo: Build (Debug)"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}